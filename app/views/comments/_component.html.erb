<div class="row" id="comment-<%= comment.id %>">
  <div class="small-3 large-2 columns"><img src="http://placehold.it/50x50&amp;text=[img]"></div>
  <div class="small-9 large-10 columns"><p><strong><%= comment.user.email %> replied:</strong> <%= comment.content %></p>
    <div class="right"><span class="radius secondary label"><%= comment.created_at.strftime("%m-%d %H:%M") %></span></div>

    <ul class="inline-list">
      <% if user_signed_in? && comment.user.id == current_user.id %>
        <li><%= link_to "Delete", comment_path(comment), :method => :delete, :confirm => "Are u sure?", :remote => true %></li>
      <% end %>
    </ul>
  </div>
</div>
