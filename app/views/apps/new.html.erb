  <% @app.errors.full_messages.each do |msg| %>
    <div data-alert class="alert-box alert">
      <span><%= msg %></span><br />
      <a href="#" class="close">&times;</a>
    </div>
  <% end %>

  <%= form_for(@app) do |f| %>
    <div class="row">
      <div class="small-3 columns">
        <%= f.label :name, "App Name", :class => "right inline" %>
      </div>
      <div class="small-9 columns">
        <%= f.text_field :name, :placeholder => "My App with SNU Oauth", :required => true %>
      </div>
    </div>
    <hr />
    <div class="row">
      <div class="small-3 columns">
        <%= f.label :redirect_uri, "Redirect URI", :class => "right inline" %>
      </div>
      <div class="small-9 columns">
        <%= f.url_field :redirect_uri, :placeholder => "example.com", :required => true %>
      </div>
    </div>
    <hr />
    <%= f.submit "Create app", :class => "button small right" %>
  <% end %>
</div>
